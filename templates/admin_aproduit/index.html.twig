{% extends 'base.html.twig' %}

{% block title %}Aproduit index{% endblock %}

{% block body %}
    <h1>Aproduit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aproduit in aproduits %}
            <tr>
                <td>{{ aproduit.id }}</td>
                <td>{{ aproduit.titre }}</td>
                <td>{{ aproduit.description }}</td>
                <td>
                    <a href="{{ path('app_admin_aproduit_show', {'id': aproduit.id}) }}">show</a>
                    <a href="{{ path('app_admin_aproduit_edit', {'id': aproduit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_aproduit_new') }}">Create new</a>
{% endblock %}
