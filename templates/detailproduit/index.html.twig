{% extends 'base.html.twig' %}

{% block title %}Hello DetailproduitController!{% endblock %}

{% block body %}

 <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">back to list</a>

 <h1>Commentaires</h1>
{% for uncommentaire in les_commentaires %}
 <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>  {{uncommentaire.id}}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>  {{uncommentaire.titre}}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>  {{uncommentaire.description}}</td>
            </tr>
            <tr>
                <th>Ecrit par</th>
                <td>  {{uncommentaire.users.id}}</td>
            </tr>
        </tbody>
    </table>
   
{% endfor %}
{% if is_granted('ROLE_USER') %}
    <h1>Ajouter un commentaire</h1>
 
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn">
        {{ button_label|default('Enregistrer le commentaire') }}
        </button>
    {{ form_end(form) }}


{% endif %} 
   
{% endblock %}
